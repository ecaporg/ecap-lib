{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "recommended": true,
        "useExhaustiveDependencies": "off"
      },
      "suspicious": {
        "recommended": true,
        "noExplicitAny": "off"
      },
      "style": {
        "recommended": true,
        "noNonNullAssertion": "off",
        "noUselessElse": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "a11y": {
        "noRedundantRoles": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignore": ["node_modules", ".next", "build", "dist", "out", "public", "*.lock", "*.log"]
  }
}
